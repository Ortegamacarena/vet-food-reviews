---
import Layout from '@/layouts/Layout.astro';
import authorData from '@/data/author.json';

const stats = [
  { icon: 'BookOpen', value: authorData.stats.reviewsWritten, label: 'Reviews escritos' },
  { icon: 'Award', value: authorData.stats.yearsExperience, label: 'A√±os de experiencia' },
  { icon: 'Users', value: `${(authorData.stats.petsHelped / 1000).toFixed(0)}k+`, label: 'Mascotas ayudadas' },
  { icon: 'Heart', value: authorData.stats.brandsAnalyzed, label: 'Marcas analizadas' },
];
---

<Layout title={`${authorData.name} | PetFood Expert`}>
  <section class="bg-gradient-to-b from-secondary/50 to-background py-16">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-block mb-6">
            <div class="relative">
              <div class="h-40 w-40 mx-auto rounded-full bg-gradient-to-br from-primary/20 to-accent/20 flex items-center justify-center">
                <span class="text-8xl">{authorData.image}</span>
              </div>
              <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 bg-primary text-primary-foreground px-4 py-1 rounded-full text-sm font-medium">
                Veterinario
              </div>
            </div>
          </div>

          <h1 class="text-4xl md:text-5xl font-heading font-bold mb-2">
            {authorData.name}
          </h1>
          <p class="text-xl text-muted-foreground mb-4">
            {authorData.title}
          </p>
          <p class="text-muted-foreground flex items-center justify-center gap-2">
            üìç {authorData.location} ‚Ä¢ {authorData.experience}
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
          {stats.map((stat) => (
            <div class="bg-card rounded-2xl p-6 border border-border text-center">
              <svg class="h-6 w-6 mx-auto mb-3 text-primary" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                {stat.icon === 'BookOpen' && <><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></>}
                {stat.icon === 'Award' && <><circle cx="12" cy="8" r="6"/><path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/></>}
                {stat.icon === 'Users' && <><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></>}
                {stat.icon === 'Heart' && <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>}
              </svg>
              <p class="text-3xl font-heading font-bold">{stat.value}</p>
              <p class="text-sm text-muted-foreground">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="py-12">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="md:col-span-2 space-y-8">
            <div class="bg-card rounded-2xl p-6 border border-border">
              <h2 class="font-heading font-semibold text-xl mb-4">
                Mi Historia
              </h2>
              <p class="text-muted-foreground leading-relaxed mb-6">
                {authorData.bio}
              </p>
              <p class="text-foreground leading-relaxed italic border-l-4 border-primary pl-4">
                "{authorData.mission}"
              </p>
            </div>

            <div class="bg-card rounded-2xl p-6 border border-border">
              <h2 class="font-heading font-semibold text-xl mb-4 flex items-center gap-2">
                <svg class="h-5 w-5 text-primary" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c3 3 9 3 12 0v-5"/></svg>
                Credenciales
              </h2>
              <ul class="space-y-3">
                {authorData.credentials.map((credential) => (
                  <li class="flex items-start gap-3">
                    <span class="h-2 w-2 rounded-full bg-primary mt-2 shrink-0"></span>
                    <span class="text-muted-foreground">{credential}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="bg-gradient-to-br from-primary/10 to-accent/10 rounded-2xl p-6 border border-primary/20">
              <h2 class="font-heading font-semibold text-xl mb-4">
                Especialidades
              </h2>
              <div class="flex flex-wrap gap-2">
                {authorData.specialties.map((specialty) => (
                  <span class="bg-primary/10 text-primary px-4 py-2 rounded-full font-medium">
                    {specialty}
                  </span>
                ))}
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <div class="bg-card rounded-2xl p-6 border border-border">
              <h3 class="font-heading font-semibold mb-4">Contacto</h3>
              <div class="space-y-3">
                <a href={`mailto:${authorData.socialMedia.email}`} class="flex items-center gap-3 p-3 rounded-xl hover:bg-secondary transition-colors group">
                  <svg class="h-5 w-5 text-muted-foreground group-hover:text-primary" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                  <span class="text-sm truncate">{authorData.socialMedia.email}</span>
                </a>
              </div>
            </div>

            <div class="bg-primary/10 rounded-2xl p-6 border border-primary/20">
              <h3 class="font-heading font-semibold mb-2">¬øTienes dudas?</h3>
              <p class="text-sm text-muted-foreground mb-4">
                Explora mis reviews detallados para encontrar la mejor alimentaci√≥n para tu mascota.
              </p>
              <a href="/articulos" class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-lg text-sm font-semibold ring-offset-background transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 shadow-soft hover:shadow-hover hover:-translate-y-0.5 w-full h-11 px-5 py-2">
                Ver Reviews
                <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
