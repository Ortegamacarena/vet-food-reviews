---
import Layout from '@/layouts/Layout.astro';
import breedsData from '@/data/breeds.json';
import brandsData from '@/data/brands.json';

export async function getStaticPaths() {
  const dogPaths = breedsData.dogs.map((breed) => ({
    params: { type: 'dog', id: breed.id },
    props: { breed, type: 'dog' },
  }));

  const catPaths = breedsData.cats.map((breed) => ({
    params: { type: 'cat', id: breed.id },
    props: { breed, type: 'cat' },
  }));

  return [...dogPaths, ...catPaths];
}

const { breed, type } = Astro.props;
const isDog = type === 'dog';

const recommendedBrands = breed.recommendedFood
  .map((foodId: string) => brandsData.find(b => b.id === foodId))
  .filter(Boolean);
---

<Layout title={`${breed.name} | PetFood Expert`}>
  <section class={`py-12 ${isDog ? 'bg-gradient-to-b from-dog/10 to-background' : 'bg-gradient-to-b from-cat/10 to-background'}`}>
    <div class="container">
      <a href="/razas" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-muted transition-colors mb-6">
        <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
        Volver a razas
      </a>

      <div class="grid lg:grid-cols-3 gap-8 items-start">
        <div class="lg:col-span-2">
          <div class="flex items-center gap-4 mb-6">
            <div class={`h-24 w-24 rounded-2xl flex items-center justify-center text-6xl ${isDog ? 'bg-dog-light' : 'bg-cat-light'}`}>
              {breed.image}
            </div>
            <div>
              <span class={`text-xs font-medium px-2 py-1 rounded-full ${isDog ? 'bg-dog-light text-dog' : 'bg-cat-light text-cat'}`}>
                {isDog ? 'üêï Perro' : 'üêà Gato'}
              </span>
              <h1 class="text-3xl md:text-4xl font-heading font-bold mt-2">
                {breed.name}
              </h1>
            </div>
          </div>

          <p class="text-lg text-muted-foreground mb-6">
            {breed.description}
          </p>

          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="bg-card rounded-xl p-4 border border-border text-center">
              <svg class="h-5 w-5 mx-auto mb-2 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
              <p class="text-sm font-medium">{breed.origin}</p>
              <p class="text-xs text-muted-foreground">Origen</p>
            </div>
            <div class="bg-card rounded-xl p-4 border border-border text-center">
              <svg class="h-5 w-5 mx-auto mb-2 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><line x1="19" x2="19" y1="8" y2="14"/><line x1="22" x2="16" y1="11" y2="11"/></svg>
              <p class="text-sm font-medium">{breed.weight}</p>
              <p class="text-xs text-muted-foreground">Peso</p>
            </div>
            <div class="bg-card rounded-xl p-4 border border-border text-center">
              <svg class="h-5 w-5 mx-auto mb-2 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
              <p class="text-sm font-medium">{breed.lifespan}</p>
              <p class="text-xs text-muted-foreground">Esperanza</p>
            </div>
            <div class="bg-card rounded-xl p-4 border border-border text-center">
              <svg class="h-5 w-5 mx-auto mb-2 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m14 16-8-8-8 8"/><path d="m6 8 8 8 8-8"/></svg>
              <p class="text-sm font-medium">{breed.exerciseNeeds}</p>
              <p class="text-xs text-muted-foreground">Ejercicio</p>
            </div>
          </div>
        </div>

        <div class="bg-card rounded-2xl p-6 border border-border">
          <h3 class="font-heading font-semibold mb-4">Temperamento</h3>
          <div class="flex flex-wrap gap-2 mb-6">
            {breed.temperament.map((trait: string) => (
              <span class={`px-3 py-1 rounded-full text-sm ${isDog ? 'bg-dog-light text-dog' : 'bg-cat-light text-cat'}`}>
                {trait}
              </span>
            ))}
          </div>

          <h3 class="font-heading font-semibold mb-3 flex items-center gap-2">
            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/></svg>
            Cuidado del pelaje
          </h3>
          <p class="text-sm text-muted-foreground mb-4">
            Necesidad de cepillado: <span class="font-medium text-foreground">{breed.groomingNeeds}</span>
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12">
    <div class="container">
      <div class="grid lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-8">
          <div class="bg-card rounded-2xl p-6 border border-border">
            <h3 class="font-heading font-semibold text-xl mb-4 flex items-center gap-2">
              <svg class="h-5 w-5 text-accent" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10.29 3.86 1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" x2="12" y1="9" y2="13"/><line x1="12" x2="12.01" y1="17" y2="17"/></svg>
              Problemas de Salud Comunes
            </h3>
            <div class="grid md:grid-cols-2 gap-3">
              {breed.healthIssues.map((issue: string) => (
                <div class="flex items-center gap-2 p-3 bg-accent/10 rounded-lg">
                  <span class="h-2 w-2 rounded-full bg-accent"></span>
                  <span class="text-sm">{issue}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="bg-gradient-to-br from-primary/10 to-accent/10 rounded-2xl p-6 border border-primary/20">
            <h3 class="font-heading font-semibold text-xl mb-4 flex items-center gap-2">
              <svg class="h-5 w-5 text-primary" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg>
              Consejos de Alimentaci√≥n
            </h3>
            <p class="text-foreground leading-relaxed">
              {breed.feedingTips}
            </p>
          </div>
        </div>

        <div>
          <div class="bg-card rounded-2xl p-6 border border-border sticky top-24">
            <h3 class="font-heading font-semibold text-lg mb-4">
              Marcas Recomendadas
            </h3>
            <div class="space-y-3">
              {recommendedBrands.map(brand => brand && (
                <a key={brand.id} href={`/marca/${brand.id}`} class="flex items-center gap-3 p-3 rounded-xl hover:bg-secondary transition-colors group">
                  <span class="text-2xl">{brand.logo}</span>
                  <div class="flex-1">
                    <p class="font-medium text-sm group-hover:text-primary transition-colors">
                      {brand.name}
                    </p>
                    <p class="text-xs text-muted-foreground">{brand.priceRange}</p>
                  </div>
                  <div class="flex items-center gap-1 text-xs">
                    <span class="text-rating-star">‚òÖ</span>
                    <span>{brand.rating}</span>
                  </div>
                </a>
              ))}
            </div>

            <a href="/articulos" class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-lg text-sm font-semibold ring-offset-background transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 shadow-soft hover:shadow-hover hover:-translate-y-0.5 w-full mt-4 h-11 px-5 py-2">
              Ver todos los reviews
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
