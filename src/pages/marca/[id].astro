---
import Layout from '@/layouts/Layout.astro';
import brandsData from '@/data/brands.json';
import articlesData from '@/data/articles.json';

export async function getStaticPaths() {
  return brandsData.map((brand) => ({
    params: { id: brand.id },
    props: { brand },
  }));
}

const { brand } = Astro.props;
const brandArticles = articlesData.filter(a => a.brandId === brand.id);
---

<Layout title={`${brand.name} | PetFood Expert`}>
  <section class="bg-gradient-to-b from-secondary/50 to-background py-12">
    <div class="container">
      <a href="/marcas" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-muted transition-colors mb-6">
        <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
        Volver a marcas
      </a>

      <div class="grid md:grid-cols-3 gap-8 items-center">
        <div class="md:col-span-2">
          <div class="flex items-center gap-4 mb-4">
            <div class="h-20 w-20 rounded-2xl bg-gradient-to-br from-primary/10 to-accent/10 flex items-center justify-center text-5xl">
              {brand.logo}
            </div>
            <div>
              <h1 class="text-3xl md:text-4xl font-heading font-bold">
                {brand.name}
              </h1>
              <div class="flex items-center gap-4 mt-2">
                <div class="flex items-center gap-1">
                  {Array.from({ length: 5 }).map((_, i) => (
                    <svg key={i} class={`h-4 w-4 ${i < Math.floor(brand.rating) ? 'text-rating-star fill-rating-star' : 'text-muted-foreground/30'}`} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                  ))}
                  <span class="font-semibold text-foreground ml-1 text-sm">{brand.rating.toFixed(1)}</span>
                </div>
                <span class="text-sm text-primary font-medium bg-primary/10 px-3 py-1 rounded-full">
                  {brand.priceRange}
                </span>
              </div>
            </div>
          </div>

          <p class="text-lg text-muted-foreground">
            {brand.description}
          </p>
        </div>

        <div class="bg-card rounded-2xl p-6 border border-border">
          <h3 class="font-heading font-semibold mb-4">Informaci√≥n</h3>
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <svg class="h-4 w-4 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>
              <span class="text-sm">{brand.country}</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="h-4 w-4 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
              <span class="text-sm">Fundada en {brand.founded}</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="h-4 w-4 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="8" r="6"/><path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/></svg>
              <span class="text-sm">{brand.specialty}</span>
            </div>
          </div>

          <div class="flex gap-2 mt-4 pt-4 border-t border-border">
            {brand.petTypes.map(type => (
              <span class="text-xs px-2 py-1 rounded-full bg-secondary">
                {type === 'perro' ? 'üêï Perros' : 'üêà Gatos'}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12">
    <div class="container">
      <h2 class="text-2xl font-heading font-bold mb-6">
        Reviews de {brand.name}
      </h2>

      {brandArticles.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {brandArticles.map((article) => (
            <article class="group">
              <a href={`/analisis/${article.slug}`}>
                <div class="bg-card rounded-2xl overflow-hidden card-hover border border-border">
                  <div class="relative h-48 bg-gradient-to-br from-primary/10 to-accent/10 flex items-center justify-center">
                    <span class="text-7xl group-hover:scale-110 transition-transform duration-300">
                      {article.image}
                    </span>
                  </div>
                  <div class="p-5">
                    <h3 class="font-heading font-semibold text-lg mb-2 group-hover:text-primary transition-colors line-clamp-2">
                      {article.title}
                    </h3>
                    <div class="flex items-center gap-1">
                      {Array.from({ length: 5 }).map((_, i) => (
                        <svg key={i} class={`h-3 w-3 ${i < Math.floor(article.rating) ? 'text-rating-star fill-rating-star' : 'text-muted-foreground/30'}`} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                      ))}
                      <span class="font-semibold text-foreground ml-1 text-sm">{article.rating.toFixed(1)}</span>
                    </div>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <p class="text-muted-foreground text-center py-8">
          A√∫n no hay reviews de esta marca. ¬°Pr√≥ximamente!
        </p>
      )}
    </div>
  </section>
</Layout>
